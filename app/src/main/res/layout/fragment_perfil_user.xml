<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="teamprogra.app.fragment.FragmentPerfilUser"
    android:background="@color/colorDarkRed">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <ImageView
            android:id="@+id/imageView_userImagePU"
            android:layout_alignParentTop="true"
            android:layout_width="match_parent"
            android:layout_height="200dp"
            android:background="@color/colorPrimaryDark"
            android:alpha=".8"/>

        <TextView
            android:id="@+id/textView_userNamePU"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_below="@id/imageView_userImagePU"
            android:singleLine="true"
            android:text="User name"
            android:textColor="@color/colorWhite"
            android:textSize="20sp"
            android:fontFamily="serif-monospace"/>

        <TextView
            android:id="@+id/textView_userEmailPU"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_below="@id/textView_userNamePU"
            android:singleLine="true"
            android:text="User email"
            android:textColor="@color/colorWhite"
            android:textSize="20sp"
            android:fontFamily="serif-monospace"/>

        <TextView
            android:id="@+id/textView_userPhonePU"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_below="@id/textView_userEmailPU"
            android:singleLine="true"
            android:text="User phone"
            android:textColor="@color/colorWhite"
            android:textSize="20sp"
            android:fontFamily="serif-monospace"/>

        <TextView
            android:id="@+id/textView_userUbicationPU"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_below="@id/textView_userPhonePU"
            android:singleLine="true"
            android:text="User ubication"
            android:textColor="@color/colorWhite"
            android:textSize="20sp"
            android:fontFamily="serif-monospace"/>

        <TextView
            android:id="@+id/textView_eventsTitlePU"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:layout_centerHorizontal="true"
            android:layout_below="@id/textView_userUbicationPU"
            android:text="Eventos realizados"
            android:textColor="@color/colorAccent"
            android:textSize="25sp"
            android:fontFamily="monospace"
            android:gravity="center"
            android:background="@color/colorWhite"/>

        <TextView
            android:id="@+id/textView_totalEventsPU"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="10dp"
            android:layout_below="@id/textView_eventsTitlePU"
            android:text="0"
            android:textColor="@color/colorWhite"
            android:textSize="40sp"
            android:fontFamily="serif-monospace"/>

        <TextView
            android:id="@+id/textView_eventsHistorialPU"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_below="@id/textView_totalEventsPU"
            android:text="Ver historial"
            android:textColor="@color/colorPrimaryDark"
            android:textSize="30sp"
            android:fontFamily="serif-monospace" />

        <TextView
            android:id="@+id/textView_scorePU"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="10dp"
            android:layout_below="@id/textView_eventsHistorialPU"
            android:text="Puntaje"
            android:textColor="@color/colorWhite"
            android:textSize="30sp"
            android:fontFamily="serif-monospace"/>

        <RatingBar
            android:id="@+id/ratingBar"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:background="@color/colorPrimary"
            android:layout_below="@id/textView_scorePU"
            android:isIndicator="true"
            android:numStars="5"/>
    </RelativeLayout>


</FrameLayout>
